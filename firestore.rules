
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow anyone to read products and reviews
    match /products/{productId} {
      allow read: if true;
      
      // Allow authenticated users to create a product
      allow create: if request.auth != null && request.resource.data.supplierId == request.auth.uid;
        
      // Only the supplier who created the product can update or delete it
      allow update, delete: if request.auth != null && resource.data.supplierId == request.auth.uid;
      
      // Rules for the reviews subcollection
      match /reviews/{reviewId} {
        allow read: if true;
        
        // Allow a vendor to create a review if they are authenticated
        allow create: if request.auth != null && request.resource.data.vendorId == request.auth.uid;
      }
    }

    // Allow users to read public user data, but only update their own.
    match /users/{userId} {
      allow read: if true;
      allow update: if request.auth != null && request.auth.uid == userId;
      // Allow creation for new signups
      allow create: if request.auth != null && request.auth.uid == userId;
    }
  }
}
